extends base.pug
include mixins/video.pug

block content
    form(method="GET").search__form
        input(placeholder="search by title" type="text" name="keyword")
        button
            i(class="fa-solid fa-magnifying-glass")
    div.video-grid
        each video in videos 
            +video(video)
        else
            span.empty__message No video found.